generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model User {
    id Int @id @default(autoincrement())
    firstName String
    surname String
    patronymic String? 
    position String
    login String
    password String
    products Actions[]
}

model Product {
    id Int @id @default(autoincrement())
    name String
    quantity Int @default(1)
    add_date DateTime @default(now())
    users Actions[]
    files File[]
}

model Actions {
    id Int @id @default(autoincrement())
    date DateTime @default(now())
    productId Int 
    userId Int 
    employee String? 
    office String?
    product Product @relation(fields: [productId], references: [id])
    user User @relation(fields: [userId], references: [id])
    type Effect @default(ADD)
}

model File {
    id Int @id @default(autoincrement())
    filepath String 
    productId Int
    type Type
    product Product @relation(fields: [productId], references: [id])
}

enum Type {
    INVOICE
    MEMO
}

enum Effect  {
    ADD
    DISMISS
}